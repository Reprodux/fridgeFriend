<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background"
    android:padding="16dp"
    tools:context=".UserSettingActivity">

    <!-- Welcome User TextView -->
    <TextView
        android:id="@+id/textViewWelcomeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_setting_welcome"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Personal Settings Option -->
    <TextView
        android:id="@+id/textViewPersonalSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_settings"
        android:drawableStart="@drawable/setting"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="togglePersonalSettings"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcomeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hidden expandable layout for Personal Settings -->
    <LinearLayout
        android:id="@+id/layoutPersonalSettingsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPersonalSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Name Field -->
        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name"
            android:inputType="textPersonName" />

        <!-- Last Name Field -->
        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            android:inputType="textPersonName" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <!-- Save Button (Optional) -->
        <Button
            android:id="@+id/buttonSavePersonalSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:layout_gravity="end" />
    </LinearLayout>



    <!-- Notifications Option -->
    <TextView
        android:id="@+id/textViewNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notifications"
        android:drawableStart="@drawable/notification"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:onClick="toggleNotificationSettings"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/layoutPersonalSettingsInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hidden expandable layout for Notification Settings -->
    <LinearLayout
        android:id="@+id/layoutNotificationSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNotifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Allow Notifications Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_notifications"
                android:layout_marginEnd="8dp"/>

            <Switch
                android:id="@+id/switchAllowNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Account Management Option -->
    <TextView
        android:id="@+id/textViewAccountManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_management"
        android:drawableStart="@drawable/managing"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/layoutNotificationSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dietary Preferences Option -->
    <TextView
        android:id="@+id/textViewDietaryPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diet_preferences"
        android:drawableStart="@drawable/diet"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/textViewAccountManagement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
